<%- include('./partials/header')  %>
<%- include('./partials/navbar')  %>

<h3><%= subtitle %></h3>
<p><strong>Are you sure you want to delete the below message?</strong></p>
<div class="card " style="max-width: 50rem; margin: 10px;">
    <div class="card-body d-flex-column">
      <h5 class="card-title"><%= locals.message.headline %></h5>
      <p class="card-text"><%= locals.message.message %></p>
      <p class="card-text" style="text-align: center;"><strong><%= user.is_member ? message.user: 'Anonymous' %> - <%= new Date(message.date).toDateString() %></strong></p>

      
    </div>
</div>
<form action="" method="POST" class="justify-self-center">
    <input type="hidden" name="message" value="<%= message.id%>">
    <button class="btn btn-primary ">Confirmed</button>
  </form>

<%- include('./partials/footer')  %>